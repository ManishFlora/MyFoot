CREATE OR REPLACE VIEW LISTORDERPRODUCTS
AS
SELECT P.productsId, P.brandId , P.categoryId , P.productsDescription , P.productsDiscount, P.productsName , P.productsPrice , P.productsQuantity , P.subCategoryId, P.supplierId , PS.color , PS.detail , PS.dimensions, PS.material, PS.season, PS.shoeWidth, PS.size, PS.sole,PS.style,PS.supportSystem,PS.waranty,PS.weight, B.brandName , C.categoryName, SC.subCategoryName, S.supplierName, P.discountedPrice,CI.quantity,CI.orderDetail 
FROM PRODUCTS P, PRODUCTSPECIFICATION PS, BRAND B , CATEGORY C, SUBCATEGORY SC, SUPPLIER S, CARTITEMS CI
WHERE P.productsId = PS.productsId
AND P.brandId = B.brandId 
AND P.categoryId = C.categoryId
AND P.subCategoryId = SC.subCategoryID
AND P.supplierId = S.supplierId
AND P.productsId = CI.productsId
AND CI.flag = false;
