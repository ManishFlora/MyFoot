CREATE OR REPLACE VIEW LISTPRODUCTS
AS
SELECT P.BRANDID , P.CATEGORYID , P.PRODUCTSDESCRIPTION , P.PRODUCTSDISCOUNT , P.PRODUCTSNAME , P.PRODUCTSPRICE , P.PRODUCTSQUANTITY , P.SUBCATEGORYID , P.SUPPLIERID , PS.PRODUCTCOLOR , PS.PRODUCTDESIGN , PS.PRODUCTHEEL , PS.PRODUCTLAST , PS.PRODUCTLINNING , PS.PRODUCTSIZE , PS.PRODUCTSOLE , PS.PRODUCTUPPER, B.BRANDNAME , C.CATEGORYNAME, SC.SUBCATEGORYNAME, S.SUPPLIERNAME
FROM PRODUCTS P, PRODUCTSPECIFICATION PS, BRAND B , CATEGORY C, SUBCATEGORY SC, SUPPLIER S
WHERE P.PRODUCTSID = PS.PRODUCTSID
AND P.BRANDID = B.BRANDID
AND P.CATEGORYID = C.CATEGORYID
AND P.SUBCATEGORYID = SC.SUBCATEGORYID
AND P.SUPPLIERID = S.SUPPLIERID;